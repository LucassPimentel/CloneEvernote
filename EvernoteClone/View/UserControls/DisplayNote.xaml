<UserControl x:Class="EvernoteClone.View.UserControls.DisplayNote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EvernoteClone.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="200">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="{Binding Title}" 
                   Foreground="Black"
                   Margin="3 0 3 0"
                   FontSize="15"
                   FontWeight="Bold"
                   VerticalAlignment="Center"/>

        <TextBlock Text="{Binding UpdatedAt, StringFormat='Última Alt. em {0:g}', ConverterCulture='pt-BR'}" 
                   Foreground="Black"
                   Margin="3 0"
                   FontSize="10"
                   VerticalAlignment="Center">
        </TextBlock>

    </StackPanel>
</UserControl>
